
@{
    ViewBag.Title = "add";
}
@model QL_Sim.Models.SimSo

<div class="container-web">
    <div class="alert alert-success">
        <h4 class="text-center">Thêm sim</h4>
    </div>

    @using (Html.BeginForm("add", "Home", FormMethod.Post, new { @class = "form-horizontal container-form" }))
    {
        @Html.HiddenFor(model => model.id)
        <div class="form-group ">
            @Html.Label("Số ", new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.so, new { htmlAttributes = new { @class = "form-control col-md-8" } })

        </div>
        <div class="form-group">
            @Html.Label("Giá ", new { @class = "control-label col-sm-2" })
            @Html.EditorFor(model => model.gia, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <div class="form-group">
            @Html.Label("ngày nhập ", new { @class = "control-label col-sm-2" })
            @Html.EditorFor(model => model.ngaynhap, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = DateTime.Now.ToString("yyyy-MM-dd") } })
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default ">Sửa</button>
                @Html.ActionLink("Quay lại", "index", "Home", new { @class = "btn btn-danger" })
            </div>
        </div>
    }
</div>