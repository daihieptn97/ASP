
@{
    ViewBag.Title = "edit";
}


@model QL_Sim.Models.SimSo

<div class="container-web">
    <div class="alert alert-success">
        <h4 class="text-center">Sửa sim</h4>
    </div>

    @using (Html.BeginForm("edit", "Home", FormMethod.Post, new { @class = "form-horizontal container-form" }))
    {
        @Html.HiddenFor(model => model.id)
        <div class="form-group">
            @Html.Label("Số ", new { @class = "control-label col-md-3" })
            @Html.EditorFor(model => model.so, new { htmlAttributes = new { @class = "form-control-u col-md-9" } })

        </div>
        <div class="form-group">
            @Html.Label("Giá ", new { @class = "control-label col-md-3" })
            @Html.EditorFor(model => model.gia, new { htmlAttributes = new { @class = "form-control-u  col-md-9" } })

        </div>
        <div class="form-group">
            @Html.Label("ngày nhập ", new { @class = "control-label col-md-3" })
            @Html.EditorFor(model => model.ngaynhap, new { htmlAttributes = new { @class = "form-control-u  col-md-9", @readonly = "readonly" } })
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10">
                <button type="submit" class="btn btn-default ">Sửa</button>
                @Html.ActionLink("Quay lại", "index", "Home", new { @class = "btn btn-danger" })
            </div>
        </div>

    }
</div>
