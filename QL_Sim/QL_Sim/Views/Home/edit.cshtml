
@{
    ViewBag.Title = "edit";
}


@model QL_Sim.Models.SimSo

@using (Html.BeginForm("edit", "Home", FormMethod.Post, new { @class = "form-horizontal " }))
{
    @Html.HiddenFor(model => model.id)
    <div class="form-group">
        @Html.Label("Số ", new { @class = "control-label col-sm-2" })
        @Html.EditorFor(model => model.so, new { htmlAttributes = new { @class = "form-control col-sm-10" } })

    </div>
    <div class="form-group">
        @Html.Label("Giá ", new { @class = "control-label col-sm-2" })
        @Html.EditorFor(model => model.gia, new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <div class="form-group">
        @Html.Label("ngày nhập ", new { @class = "control-label col-sm-2" })
        @Html.EditorFor(model => model.ngaynhap, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>

    <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default ">Sửa</button>
        @Html.ActionLink("Quay lại", "index", "Home", new { @class = "btn btn-danger" })
    </div>


}
