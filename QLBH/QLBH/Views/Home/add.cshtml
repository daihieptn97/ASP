
@{
    /**/

    ViewBag.Title = "Thêm hàng hóa";
    Html.EnableClientValidation(true);
}
@model QLBH.Models.HangHoa

<div class="container-web">

    <div class="alert alert-success text-center">
        <h4>Thêm sản phẩm mới</h4>
    </div>

    <div class="container-form">
        @using (Html.BeginForm("add", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <hr />
            <dl class="dl-horizontal">


                <dt>
                    @Html.Label("Tên")
                </dt>

                <dd>
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { } })
                    @* @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })*@
                </dd>
                <br />
                <dt>
                    @Html.Label("Ngày hết hạn")
                </dt>

                <dd>
                    @Html.EditorFor(model => model.expired, new { htmlAttributes = new { @Type = "date" } })
                    @*  @Html.ValidationMessageFor(m => m.expired, "", new { @class = "text-danger" })*@
                </dd>
                <br />
                <dt>
                    @Html.Label("Số lượng tồn")
                </dt>

                <dd>

                    @Html.EditorFor(model => model.total, new { htmlAttributes = new { min = 0 } })
                    @* @Html.ValidationMessageFor(m => m.total, "", new { @class = "text-danger" })*@
                </dd>
                <br />
                <dd>
                    @*<input type="submit" value="Thêm sản phẩm mới" class="btn btn-success col-lg-1" />*@
                    @Html.ActionLink("Quay lại", "index", null, new { @class = "btn btn-danger" })
                    <button class="btn btn-success">Thêm sản phẩm</button>

                </dd>
            </dl>

        }



    </div>
</div>

